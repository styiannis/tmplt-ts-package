{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "lib": ["ES2023"],
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "outDir": "build", // @note: Specifies where the TypeScript compiler (`tsc`) outputs its generated files. This directory is separate from the `dist` folder used by the `npm run build` script, which outputs the final build artifacts.
    "rootDir": "src"
  },
  "include": ["src"]
}
